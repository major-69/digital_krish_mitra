<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/lightgrey"
    android:layout_marginEnd="10sp"
    android:layout_marginStart="10sp"
    android:layout_marginBottom="10sp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/match"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="macthed"
                    android:padding="3dp"
                    android:visibility="gone"
                    android:textColor="@color/purple_700"
                    android:textSize="20sp"
                    android:drawablePadding="10sp"
                    android:layout_gravity="end"/>
            </LinearLayout>

            <TextView
                android:id="@+id/switchV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:visibility="gone"
                android:padding="3dp"
                android:drawablePadding="10sp"
                android:layout_gravity="end"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/androiddev"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/packages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rs 2-3 LPA"
                android:textColor="@color/black"
                android:gravity="end"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                app:cardBackgroundColor="@color/white">
                <TextView
                    android:id="@+id/experience"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0-1 Year"
                    android:padding="5dp"
                    android:maxLines="1"
                    android:maxLength="20"
                    android:textColor="@color/black"
                    />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                android:layout_marginStart="10sp"
                app:cardBackgroundColor="@color/white">
                <TextView
                    android:id="@+id/qualification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/diploma"
                    android:padding="5dp"
                    android:maxLines="1"
                    android:maxLength="20"
                    android:textColor="@color/black"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:visibility="gone"
            android:text="Digicoders Technology . 20-99 Employees"
            android:textColor="@color/black"
           />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:cardCornerRadius="20sp"
                app:cardBackgroundColor="@color/white"
                android:outlineSpotShadowColor="@color/white">
                <ImageView
                    android:id="@+id/pic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_baseline_person_24"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hrmanager"
                android:textColor="@color/black"
                android:maxLines="1"
                android:layout_gravity="center"
                android:layout_marginStart="10sp"
                android:maxLength="28"/>
            <TextView
                android:id="@+id/location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/lucknow"
                android:visibility="visible"
                android:textColor="@color/black"
                android:maxLines="1"
                android:layout_gravity="center"
                android:gravity="end"
                android:layout_marginEnd="10sp"
                android:maxLength="20"/>
        </LinearLayout>
        <TextView
            android:id="@+id/des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What is technology? Technology is the application of scientific knowledge to the practical aims of human life or, as it is sometimes phrased, to the change and manipulation of the human environment."
            android:layout_marginTop="15sp"
            android:textColor="@color/black"
            android:visibility="gone"
            android:maxLines="1"
            android:ems="3"/>



    </LinearLayout>

</RelativeLayout>